<p id="notice"><%= notice %></p>

<h1 style="padding-bottom:20px">Detection Labels</h1>

<%= form_with url: images_path, method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<p style="border-bottom: 2px solid #d3d3d3;"></p>

<table>
  <thead>
    <tr>
      <th>File</th>
      <th>Label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag image.file.url, width:'200px' %></td>
        <td><%= image.label %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
